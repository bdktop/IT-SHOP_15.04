<Window x:Class="ShopApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в магазин" Height="300" Width="350">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Вход" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" FontWeight="SemiBold"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,10" ToolTip="Логин"/>

            <TextBlock Text="Пароль:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" ToolTip="Пароль"/>

            <Button Content="Войти" Click="LoginButton_Click" Height="35"/>

            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
        Нет аккаунта? <Hyperlink Click="RegisterLink_Click">Зарегистрироваться</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>