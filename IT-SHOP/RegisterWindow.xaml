<Window x:Class="ShopApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="350">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email:" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,10" ToolTip="Email"/>

            <TextBlock Text="Телефон:" FontWeight="SemiBold"/>
            <TextBox x:Name="PhoneBox" Margin="0,0,0,10" ToolTip="Телефон"/>

            <TextBlock Text="Логин:" FontWeight="SemiBold"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,10" ToolTip="Логин"/>

            <TextBlock Text="Пароль:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" ToolTip="Пароль"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Height="35"/>
        </StackPanel>
    </Grid>
</Window>